# run ch manager
ros2 run ch_manager ch_manager_node --ros-args \
  -p cluster_id:=cluster_1 \
  -p ch_id:=uav_1 \
  -p member_ids:="[uav_1, uav_2]"

# run ugv with some policy eg edf
ros2 run ugv_charger ugv_charger_node --ros-args \
  -p charging_duration_sec:=20.0 \
  -p charging_policy:=edf \
  -p drain_percent_member:=0.5 \
  -p drain_percent_ch:=0.25

# create a ch
ros2 run uav_fleet uav_node --ros-args \
  -p uav_id:=uav_1 \
  -p role:=1 \
  -p default_dst_id:=sink_gateway \
  -p battery_threshold:=60.0

# create a member
ros2 run uav_fleet uav_node --ros-args \
  -p uav_id:=uav_2 \
  -p role:=0 \
  -p my_ch_id:=uav_1 \
  -p battery_threshold:=60.0
# check uav status info
ros2 topic echo /uav_fleet/status

# run network monitor
ros2 run network_monitor network_monitor_node

# run weather node
ros2 run weather_server weather_node
ros2 topic echo /environment/weather # check weather

# run coverage planner
ros2 run coverage_planner coverage_planner_node --ros-args \
  -p num_ch:=2 \
  -p uav_ids:="[uav_1, uav_2, uav_3]" \
  -p area_x_min:=0.0 -p area_x_max:=600.0 \
  -p area_y_min:=0.0 -p area_y_max:=600.0 \
  -p service_radius_ch:=250.0 \
  -p connectivity_radius_ch:=400.0

# run planner_viz
# remove any old build/install/log in the root (if they exist)
rm -rf build install log
# ALSO remove the accidental ones inside src
rm -rf src/build src/install src/log
# now build correctly from the workspace root
colcon build
# source the *root* install, not src's
source install/setup.bash
ros2 pkg list | grep planner_viz

